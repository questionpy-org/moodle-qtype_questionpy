{{!
    @template qtype_questionpy/package/package_base

    Represent a QuestionPy package.

    Context variables required for this template:
    * namespace - QuestionyPy package namespace,
    * name - QuestionPy package name,
    * description - QuestionPy package description,
    * icon - QuestionPy package icon,

    Example context (json):
    {
        "namespace": "example_namespace",
        "name": "ExamplePackage",
        "description": "This describes the package ExamplePackage.",
        "icon": "https://picsum.photos/48/48?grayscale"
    }
}}
<div class="qpy-card" id="qpy-card-{{uniqid}}">
    <div class="qpy-card-image">
        <img src="{{icon}}" alt="{{#str}} selection_no_icon, qtype_questionpy {{/str}}">
    </div>
    <div class="qpy-card-content">
        <h5 class="qpy-card-title">{{name}} <small class="text-muted">{{namespace}}</small></h5>
        <div class="qpy-show-more" id="qpy-show-more-{{uniqid}}">
            <div class="qpy-show-more-container collapse" role="region" aria-label="description" id="collapse-{{uniqid}}" aria-expanded="false">
                <div class="qpy-card-description">
                    {{{description}}}
                </div>
            </div>
            <button
              type="button"
              class="qpy-show-more-button btn btn-sm btn-link p-0 d-none collapsed"
              data-toggle="collapse"
              data-target="#collapse-{{uniqid}}"
              aria-expanded="false"
              aria-controls="collapse-{{uniqid}}"
            >
                <span class="qpy-show-more-button-more"> {{#str}} showmore, core {{/str}} {{#pix}} t/expandedchevron, core {{/pix}} </span>
                <span class="qpy-show-more-button-less"> {{#str}} showless, core {{/str}} {{#pix}} t/collapsedchevron_up, core {{/pix}} </span>
          </button>
        </div>
    </div>
    {{$action}} Default action section {{/action}}
</div>
{{#js}}
    require(['qtype_questionpy/showmore'], function(showmore) {
        showmore.init("qpy-show-more-{{uniqid}}");
    });
{{/js}}
